@model UserFactory.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Login" method="post" class="mt-4" style="max-width:400px; margin:auto;">
    <div class="form-group mb-3">
        <label asp-for="Login" class="form-label fw-bold">Login</label>
        <input asp-for="Login" class="form-control" placeholder="Enter login" />
        <span asp-validation-for="Login" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Password" class="form-label fw-bold">Password</label>
        <input asp-for="Password" class="form-control" placeholder="Enter password" type="password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary w-100">Login</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}